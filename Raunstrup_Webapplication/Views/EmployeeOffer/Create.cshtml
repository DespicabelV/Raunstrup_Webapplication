@model Raunstrup_Webapplication.ViewModel.EmployeeOfferViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>

<h1>Create</h1>

<h4>EmployeeOfferModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeOfferModel.ForeignKey1_.Offer_ID" class="control-label"></label>
                @Html.DropDownListFor(m => m.EmployeeOfferModel.ForeignKey1_.Offer_ID, new SelectList(Model.OfferModels, "Offer_ID", "Offer_ID", "Offer_ID"), "---Select OfferID---", new { @class = "form-group" })
            </div>
            <div class="form-group">
                <label asp-for="EmployeeOfferModel.ForeignKey2_.Employee_ID" class="control-label"></label>
                @Html.DropDownListFor(m => m.EmployeeOfferModel.ForeignKey2_.Employee_ID, new SelectList(Model.EmployeeModels, "Employee_ID", "Employee_ID", "Employee_ID"), "---Select Employee---", new { @class = "form-group" })
            </div>
            <div class="form-group">
                <label asp-for="EmployeeOfferModel.HoursWorked" class="control-label"></label>
                <input asp-for="EmployeeOfferModel.HoursWorked" class="form-control" />
                <span asp-validation-for="EmployeeOfferModel.HoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ServiceLine" asp-action="Create">Back to List</a>
</div>

