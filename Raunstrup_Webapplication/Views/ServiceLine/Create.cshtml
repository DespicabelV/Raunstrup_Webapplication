@model Raunstrup_Webapplication.ViewModel.ServiceLineViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>


<h1>Create</h1>

<h4>Service Line</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ServiceLineModel.ForeignKey1_.Name" class="control-label"></label>
                @Html.DropDownListFor(m => m.ServiceLineModel.ForeignKey1_.Res_ID,new SelectList(Model.ResourceModel,"Res_ID","Name","Res_ID"),"---Select Service---",new {@class = "form-group"})
            </div>
            <div class="form-group">
                <label asp-for="ServiceLineModel.ForeignKey2_.Name" class="control-label"></label>
                @Html.DropDownListFor(m => m.ServiceLineModel.ForeignKey2_.Service_ID,new SelectList(Model.ServiceModel,"Service_ID","Name","Service_ID"),"---Select Service---",new {@class = "form-group"})
            </div>
            <div class="form-group">
                <label asp-for="ServiceLineModel.ForeignKey3_.Offer_ID" class="control-label"></label>
                <input asp-for="ServiceLineModel.ForeignKey3_.Offer_ID" class="form-control" />
                <span asp-validation-for="ServiceLineModel.ForeignKey3_.Offer_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceLineModel.Resource_Quantity" class="control-label"></label>
                <input asp-for="ServiceLineModel.Resource_Quantity" class="form-control" />
                <span asp-validation-for="ServiceLineModel.Resource_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceLineModel.Added_Quantity" class="control-label"></label>
                <input asp-for="ServiceLineModel.Added_Quantity" class="form-control" />
                <span asp-validation-for="ServiceLineModel.Added_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceLineModel.Used_Quantity" class="control-label"></label>
                <input asp-for="ServiceLineModel.Used_Quantity" class="form-control" />
                <span asp-validation-for="ServiceLineModel.Used_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeOfferModel.EmployeeOffer_ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeOfferModel.ForeignKey2_.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeOfferModel.ForeignKey1_.Offer_ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeOfferModel.ForeignKey2_.Expertise)
                    </th>
                    <th>
                        Add to Task
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EmployeeOfferModels)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeOffer_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ForeignKey2_.Name)
                        </td>
                        <td>
                            @Html.DropDownList("Tasks", new SelectList(Model.OfferModel.Select(x => x.Offer_ID)))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ForeignKey2_.Expertise)
                        </td>
                        <td>
                            <div class="custom-checkbox"></div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
@Html.HiddenFor(m => m.ServiceLineModel.Service_Line_ID)
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
