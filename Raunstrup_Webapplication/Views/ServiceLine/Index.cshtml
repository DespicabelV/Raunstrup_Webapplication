@model Raunstrup_Webapplication.ViewModel.ServiceLineViewModel
@* Nichlas *@
@{
    ViewData["Title"] = "Service Line";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Service Line</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.ForeignKey3_.Offer_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.ForeignKey1_.Res_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.ForeignKey2_.Service_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.Resource_Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.Added_Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineModel.Used_Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ServiceLineModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ForeignKey3_.Offer_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ForeignKey1_.Res_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ForeignKey2_.Service_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resource_Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Added_Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Used_Quantity)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Service_Line_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Service_Line_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>