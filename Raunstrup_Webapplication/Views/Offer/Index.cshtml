@model IEnumerable<Raunstrup_Webapplication.Models.OfferModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Offer</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<form asp-action="Index">
    <input type="text" id="Filter" name="OfferName"/>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Offer_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offer_Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offer_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Offer_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Offer_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Offer_ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>



@section Scripts
{
    <script
        src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            $("#Filter").autocomplete({
                source: "api/Nichlas_Temp_API/Search"
            })
        })
    </script>   
}
